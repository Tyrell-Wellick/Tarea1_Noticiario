<center>
<h1>Nueva Noticia</h1>
<div class="container">
  <div class="jumbotron">
    <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@entry, url: admin_create_entry_path) do |f| %>
        <%= f.label :Título_de_la_Noticia %>
        <br/>
        <%= f.text_area :headline, :cols => "100", :rows => "1",
        :maxlength =>"100", :required => 'required'%>
        <br/><br/><br/>
        <%= f.label :Bajada_de_Título %>
        <br/>
        <%= f.text_area :dropline, :cols => "100", :rows => "3",
        :maxlength =>"200", :required => 'required' %>
        <br/><br/><br/>
        <%= f.label :Cuerpo_de_la_Noticia %>
        <br/>
        <%= f.text_area :body, :cols => "100", :rows => "12",
        :required => 'required' %>
        <br/><br/><br/>
        <%= f.submit "Ingresar Nueva Noticia", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
</div>
</center>
