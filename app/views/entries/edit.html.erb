<h1>Editar noticia</h1>
<div class="container">
  <div class="jumbotron">
    <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(@entry, url: edit_admin_entry_path) do |f| %>
        <%= f.label :Título_de_la_Noticia %>
        <br/>
        <%= f.text_area :headline, :cols => "100", :rows => "1",
        :maxlength =>"100", :required => 'required', :value => @entry.headline %>
        <br/><br/><br/>
        <%= f.label :Bajada_de_Título %>
        <br/>
        <%= f.text_area :dropline, :cols => "100", :rows => "3",
        :maxlength =>"200", :required => 'required', :value => @entry.dropline %>
        <br/><br/><br/>
        <%= f.label :Cuerpo_de_la_Noticia %>
        <br/>
        <%= f.text_area :body, :cols => "100", :rows => "12",
        :required => 'required' , :value => @entry.body %>
        <br/>
        <p>Fecha publicación: <%= @entry.created_at %> </p>
        <p>Fecha última edición: <%= @entry.updated_at %> </p>
        <br/><br/><br/>
        <%= f.submit "Editar Noticia", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
</div>
